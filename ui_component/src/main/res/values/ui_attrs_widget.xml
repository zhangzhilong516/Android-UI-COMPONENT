<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--************ UILoadingView ***********-->
    <declare-styleable name="UILoadingView">
        <attr name="ui_loading_view_size" format="dimension"/>
        <attr name="android:color"/>
    </declare-styleable>
    <attr name="UILoadingViewStyle" format="reference"/>


    <style name="ui.TipDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <!--************ TitleBarLayout ***********-->
    <declare-styleable name="UITitleBarLayout">
        <attr name="ui_title_bar_gravity" format="enum">
            <enum name="left_center" value="19"/>
            <enum name="center" value="17"/>
        </attr>
        <attr name="ui_title_bar_need_separator" format="boolean"/>
        <attr name="ui_title_bar_separator_color" format="color"/>
        <attr name="ui_title_bar_separator_height" format="dimension"/>
        <attr name="ui_title_bar_bg_color" format="color"/>
        <attr name="ui_title_bar_left_back_drawable_id" format="reference"/>
        <attr name="ui_title_bar_text_size" format="dimension"/>
        <attr name="ui_title_bar_text_size_with_subtitle" format="dimension"/>
        <attr name="ui_title_bar_subtitle_text_size" format="dimension"/>
        <attr name="ui_title_bar_title_color" format="color"/>
        <attr name="ui_title_bar_subtitle_color" format="color"/>
        <attr name="ui_title_bar_margin_horizontal_when_no_btn_aside" format="dimension"/>
        <attr name="ui_title_bar_container_padding_horizontal" format="dimension"/>
        <attr name="ui_title_bar_image_btn_width" format="dimension"/>
        <attr name="ui_title_bar_image_btn_height" format="dimension"/>
        <attr name="ui_title_bar_text_btn_padding_horizontal" format="dimension"/>
        <attr name="ui_title_bar_text_btn_color_state_list" format="reference"/>
        <attr name="ui_title_bar_text_btn_text_size" format="dimension"/>
    </declare-styleable>
    <attr name="UITitleBarStyle" format="reference"/>


    <!--**************** QMUIPullRefreshLayout ******************-->
    <declare-styleable name="UIPullRefreshLayout">
        <!-- RefreshView的初始offset -->
        <attr name="ui_refresh_init_offset" format="dimension"/>
        <!-- 刷新时RefreshView的offset -->
        <attr name="ui_refresh_end_offset" format="dimension"/>
        <!-- TargetView(ListView或者ScrollView等)的初始位置 -->
        <attr name="ui_target_init_offset" format="dimension"/>
        <!-- 刷新时TargetView(ListView或者ScrollView等)的位置-->
        <attr name="ui_target_refresh_offset" format="dimension"/>
        <!-- 是否自动根据RefreshView的高度计算RefreshView的初始位置-->
        <attr name="ui_auto_calculate_refresh_init_offset" format="boolean"/>
        <!-- 是否自动根据TargetView在刷新时的位置计算RefreshView的结束位置-->
        <attr name="ui_auto_calculate_refresh_end_offset" format="boolean"/>
        <!-- TargetView的刷新位置与RefreshView高度相等-->
        <attr name="ui_equal_target_refresh_offset_to_refresh_view_height" format="boolean"/>
    </declare-styleable>
    <attr name="UIPullRefreshLayoutStyle" format="reference"/>


    <!--***********轮播图BannerView***************-->
    <declare-styleable name="UIBannerView">
        <!-- 点的选中的颜色值 -->
        <attr name="ui_dotIndicatorFocus"  format="color|reference"/>
        <!-- 点的默认的颜色值 -->
        <attr name="ui_dotIndicatorNormal"  format="color|reference"/>
        <!-- 点的大小 -->
        <attr name="ui_dotSize" format="dimension"/>
        <!-- 点的间距 -->
        <attr name="ui_dotDistance" format="dimension"/>
        <!-- 点的位置 -->
        <attr name="ui_dotGravity" format="enum">
            <enum name="center" value="0"/>
            <enum name="right" value="1"/>
            <enum name="left" value="-1"/>
        </attr>
        <!-- 底部的颜色 -->
        <attr name="ui_bottomColor" format="color"/>
        <!-- 定义宽高比 -->
        <attr name="ui_withProportion" format="float"/>
        <attr name="ui_heightProportion" format="float"/>
    </declare-styleable>
</resources>
