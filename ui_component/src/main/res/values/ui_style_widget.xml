<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--**************************Dialog*************************-->
    <style name="UITheme.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>      <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>  <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>   <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>   <!-- 背景透明 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>   <!-- 模糊 -->
    </style>

    <style name="UITheme.Dialog.NoFrame">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--********************* Loading *********************-->
    <style name="UITheme.LoadingView">
        <item name="ui_loading_view_size">?attr/ui_loading_view_size</item>
        <item name="android:color">?attr/color</item>
    </style>


    <!--********************* TopBar *********************-->
    <style name="UITheme.TitleBarLayout">
        <item name="ui_title_bar_separator_color">?attr/ui_separator_color</item>
        <item name="ui_title_bar_separator_height">1px</item>
        <item name="ui_title_bar_bg_color">?attr/ui_title_bar_color</item>
        <item name="ui_title_bar_need_separator">true</item>
        <item name="ui_title_bar_left_back_drawable_id">@drawable/ui_icon_title_bar_back</item>
        <item name="ui_title_bar_gravity">center</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="ui_title_bar_title_color">?attr/ui_text_color_primary</item>
        <item name="ui_title_bar_text_size">17sp</item>
        <item name="ui_title_bar_text_size_with_subtitle">16sp</item>
        <item name="ui_title_bar_margin_horizontal_when_no_btn_aside">0dp</item>
        <item name="ui_title_bar_container_padding_horizontal">8dp</item>
        <item name="ui_title_bar_subtitle_text_size">11sp</item>
        <item name="ui_title_bar_subtitle_color">@color/ui_color_15_pure_black</item>
        <item name="ui_title_bar_image_btn_width">48dp</item>
        <item name="ui_title_bar_image_btn_height">48dp</item>
        <item name="ui_title_bar_text_btn_padding_horizontal">12dp</item>
        <item name="ui_title_bar_text_btn_color_state_list">?attr/ui_text_color_primary</item>
        <item name="ui_title_bar_text_btn_text_size">16sp</item>
    </style>
</resources>
