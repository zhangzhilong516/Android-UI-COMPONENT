<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="UITheme.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>  <!--应用的主要色调，actionBar默认使用该颜色，Toolbar导航栏的底色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> <!--应用的主要暗色调，statusBarColor默认使用该颜色-->
        <item name="colorAccent">@color/colorPrimaryDark</item>  <!--一般控件的选中效果默认采用该颜色-->

        <item name="ui_window_background">@color/ui_color_white</item>  <!--窗口背景颜色-->
        <item name="ui_text_color">@color/ui_color_75_pure_black</item> <!--Button，textView的文字颜色-->
        <item name="ui_edit_text_color">@color/colorPrimaryDark</item>  <!--默认EditView输入框字体的颜色。-->
        <item name="ui_status_bar_color">@color/ui_color_red</item>
        <item name="ui_title_bar_height">48dp</item>
        <item name="ui_title_bar_color">@color/ui_color_red</item>
        <item name="ui_app_main_color">@color/ui_color_red</item>
    </style>
</resources>